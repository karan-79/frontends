{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "skipLibCheck": true, // Exclude Vite's types from type checking
    "esModuleInterop": true, // Allow for modern ES modules
    "outDir": "./lib" // Output directory for built library code
  },
  "include": ["src"] // Include source files for compilation
}
